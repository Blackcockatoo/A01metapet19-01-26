{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "same-runtime/dist",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@metapet/core": [
        "./src/index"
      ],
      "@metapet/core/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "test/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "build/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "tailwind.config.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "archive",
    "premium_addon_library"
  ]
}
